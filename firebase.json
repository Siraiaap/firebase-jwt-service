{
  "hosting": [
    {
      "site": "siraia",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    },
    {
      "site": "siraia-redirects",
      "public": "redirects",
      "redirects": [
        {
          "source": "/",
          "destination": "/landing/",
          "type": 302
        },
        {
          "source": "/suggestions/v1/**",
          "destination": "https://siraia.com/suggestions/v1/**",
          "type": 301
        }
      ],
      "rewrites": [
        { "source": "/landing/**", "destination": "/landing/index.html" },
        { "source": "/**", "destination": "/index.html" }
      ]
    }
  ]
}
